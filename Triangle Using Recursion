public class triangle1 {
    public static void main(String[] args) {
        int col=0;
        int row=10;
        triangle(row, col);
    }
    static void triangle(int row,int col)
    {
        if(row==0)
        {
            return;
        }
        if(col<row)
        {
            System.out.print("* ");
            triangle(row, col+1);
        }
        else{
            System.err.println("");
            triangle(row-1,0);
        }
    }
}
