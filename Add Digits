public class AddDigits {
    public static void main(String[] args) {
        int num1=0;
        int num2=4738;
        System.out.println(addDigits(num1));
        System.out.println(addDigits(num2));
    }
    private static int addDigits(int num)
    {
        if(num==0) return 0;
        if(num%9==0 )return 9;
       return num%9;
    }
}
